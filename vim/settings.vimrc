" ----- settings
" Set tabs to 2 spaces
set shiftwidth=2
set tabstop=2
set softtabstop=2

" wrap lines
set wrap

" add a bar at 80 chars
set colorcolumn=80

" let . be a seperator
set iskeyword -=.

" do not use swap file, do not show warnings
set noswapfile

" ----- do not do spell check
set nospell

" do not substitute all occurance without g flag
set nogdefault
